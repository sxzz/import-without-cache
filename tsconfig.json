{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2023"],
    "moduleDetection": "force",
    "module": "nodenext",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "types": ["node", "bun"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "isolatedDeclarations": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests"]
}
